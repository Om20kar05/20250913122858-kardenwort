[environment]
; ======================================================================
; IMPORTANT: Fill in the paths for YOUR operating system.
; ======================================================================

; --- Windows Example (use forward slashes or double backslashes) ---
; Path to the Python executable from your virtual environment.
; Both absolute and relative paths are supported.
; A relative path (like the example below) is calculated from the location of this config.ini file.
; This is useful for keeping the virtual environment next to the project folder, making the setup fully portable.
python_executable = ../20250825231214-spacy-env/Scripts/python.exe

; The main workspace directory for the kardenwort project.
; Use './' to specify that the workspace is the same directory
; where this config.ini file is located.
kardenwort_workspace = ./

; The workspace for the anki-importer script.
; This path is relative to the location of config.ini
importer_workspace = ../20250913123240-kardenwort-anki-csv-importer

; --- Linux/macOS Example ---
; python_executable = /path/to/your/venv/bin/python
; kardenwort_workspace = ./
; importer_workspace = ../anki-csv-importer

[scripts]
; Names of the executable scripts
kardenwort_script_filename = kardenwort.py
kardenwort_runner_filename = kardenwort_runner.py
importer_script_filename = anki-csv-importer.py

[project_structure]
; Path to the directory with the main source code scripts
source_code_dir = src/kardenwort/core
; Relative directory paths inside the kardenwort_workspace
data_dir = data
source_texts_dir = source_texts
generated_results_dir = results

[input_files]
; Input files (relative to source_texts_dir)
text1_file = text1.txt
text2_file = text2.txt
text3_file = text3.txt

[output_format]
; Template for generating the output filename
; Variables: {mode}, {suffix}, {language}
output_template = result.{mode}.{suffix}.{language}.tsv

[language_resources]
; Language-specific data files (relative to data_dir)
; Language: English
lemma_file_en = en/en-news-2023-1m-words.csv
override_file_en = en/lemma_override_en.tsv

; Language: German
lemma_file_de = de/deu-mixed-typical-2011-1m-words.csv
override_file_de = de/lemma_override_de.tsv
dictionary_file_de = de/german.dic

[anki_importer_settings]
; Settings for the Anki CSV Importer script
note_type = Basic 20240218092126